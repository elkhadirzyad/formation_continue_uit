{% extends "admin/base.html.twig" %}
{% block head %}

    <link href="/admin/resources/vendor/datatables-plugins/dataTables.bootstrap.css" rel="stylesheet">

    <!-- DataTables Responsive CSS -->
    <link href="/admin/resources/vendor/datatables-responsive/dataTables.responsive.css" rel="stylesheet">

{% endblock %}

{% block body %}

    <div class="col-lg-12">
        {% for message in app.flashes('success') %}
        <div class="alert alert-success">

            {{message}}
        </div>

        {% endfor %}

        <div class="panel panel-primary" style="margin-top:20px;">

            <div class="panel-heading">
                Liste des formations
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">

                <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">

                    <div class="row">
                        <div class="col-sm-12">
                            <table width="100%" class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info" style="width: 100%;">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 111px;">Domaine</th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 111px;">Titre de formation</th>

                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Rendering engine: activate to sort column descending" style="width: 111px;">Etablissement</th>

                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending" style="width: 138px;">Responsable</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Platform(s): activate to sort column ascending" style="width: 125px;">Code</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending" style="width: 95px;">Année d'ouverture</th>

                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 69px;">Type de formation</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 69px;">Descriptif</th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1" colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 69px;">Opérations</th>
                                    </tr>
                                </thead>
                                <tbody>

                                    {% for mus in masters %}
                                        <tr class="gradeA odd" role="row">
                                            <td class="sorting_1">{{mus.specialite.titre}}</td>
                                            <td>{{mus.titre}}</td>
                                            <td>{{mus.etablissement}}</td>
                                            <td >{{mus.user.nom}}</td>
                                            <td >{{mus.code}}</td>

                                            <td >{{mus.dateouverture}}</td>
                                            <td >MUS</td>
                                            <td >{{mus.descriptif}}</td>
                                            <td>
                                            
                                                    <a href="{{path('editM',{id:mus.id})}}"><i class="fa fa-edit">Editer</i></a>&nbsp;|&nbsp;
                                                        
                                                      
                                                    <a href="{{path('deleteM',{id:mus.id})}}"  data-toggle="modal" data-target=""><i class="fa fa-trash-o"> Supprimer</i></a>
                                            </td>
                                        </tr>
                                    {% endfor %}

                                    {% for mus in licences %}
                                        <tr class="gradeA even" role="row">
                                                <td class="sorting_1">{{mus.specialite.titre}}</td>
                                                <td>{{mus.titre}}</td>
                                                <td>{{mus.etablissement}}</td>
                                                <td >{{mus.user.nom}}</td>
                                                <td >{{mus.code}}</td>
    
                                                <td >{{mus.dateouverture}}</td>
                                                <td >LUS</td>
                                                <td >{{mus.descriptif}}</td>
                                                <td>
                                                
                                                <a href="{{path('editL',{id:mus.id})}}"><i class="fa fa-edit">Editer</i></a>&nbsp;|&nbsp;
                                                        
                                                      
                                                <a href="{{path('deleteL',{id:mus.id})}}"  data-toggle="modal" data-target=""><i class="fa fa-trash-o"> Supprimer</i></a>
                                                </td>
                                        </tr>
                                    {% endfor %}

                                </tbody>
                            </table>
                        </div>
                    </div>

                </div>

            </div>

        </div>
    </div>

{% endblock %}

{% block script %}
    <!-- DataTables JavaScript -->
    <script src="/admin/resources/vendor/datatables/js/jquery.dataTables.min.js"></script>
    <script src="/admin/resources/vendor/datatables-plugins/dataTables.bootstrap.min.js"></script>
    <script src="/admin/resources/vendor/datatables-responsive/dataTables.responsive.js"></script>

    <script>
        $(document).ready(function () {
            $('#dataTables-example').DataTable({responsive: true});
        });
    </script>
{% endblock %}